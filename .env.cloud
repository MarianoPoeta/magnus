# Magnus Cloud Environment Configuration
# Copy this file to .env and fill in your actual values

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
MYSQL_ROOT_PASSWORD=your_secure_password_here
MYSQL_DATABASE=magnus
MYSQL_USER=root

# ==========================================
# JWT SECURITY
# ==========================================
# Generate with: openssl rand -base64 64
JWT_BASE64_SECRET=your_jwt_secret_here

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
SPRING_PROFILES_ACTIVE=prod,api-docs
PROMETHEUS_ENABLED=true

# ==========================================
# CORS CONFIGURATION
# ==========================================
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Authorization,Content-Type,X-Requested-With

# ==========================================
# CACHE CONFIGURATION
# ==========================================
CACHE_TTL=3600
CACHE_MAX_ENTRIES=2000

# ==========================================
# FRONTEND CONFIGURATION
# ==========================================
VITE_API_URL=https://your-domain.com/api
VITE_ENVIRONMENT=production
VITE_JWT_STORAGE_KEY=magnus-auth-token

# ==========================================
# MONITORING
# ==========================================
GRAFANA_ADMIN_PASSWORD=your_grafana_password_here

# ==========================================
# RESOURCE LIMITS
# ==========================================
JAVA_OPTS=-Xms512m -Xmx1g

# ==========================================
# IMAGE TAGS
# ==========================================
BACKEND_IMAGE=magnus-backend:latest
FRONTEND_IMAGE=magnus-frontend:latest