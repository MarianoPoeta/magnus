    <!--
        Added the constraints for entity ProductRequirement.
    -->
    <changeSet id="20250708150523-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="product_id"
                                 baseTableName="product_requirement"
                                 constraintName="fk_product_requirement__product_id"
