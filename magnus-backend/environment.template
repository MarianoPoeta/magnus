# Magnus Backend Environment Configuration
# Copy this file to .env.local for development or .env.prod for production

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# Development Database (MySQL)
SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3306/magnus?useUnicode=true&characterEncoding=utf8&useSSL=false&useLegacyDatetimeCode=false&createDatabaseIfNotExist=true
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=

# Liquibase Configuration
SPRING_LIQUIBASE_URL=${SPRING_DATASOURCE_URL}
SPRING_LIQUIBASE_USER=${SPRING_DATASOURCE_USERNAME}
SPRING_LIQUIBASE_PASSWORD=${SPRING_DATASOURCE_PASSWORD}

