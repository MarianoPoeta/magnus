# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
# Server Configuration
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=dev

# Application Name
SPRING_APPLICATION_NAME=magnus

# Management Endpoints
MANAGEMENT_PROMETHEUS_METRICS_EXPORT_ENABLED=true

# ==========================================
# CACHING & PERFORMANCE
# ==========================================
# Enhanced caching for Party Budget Bliss workflow automation
JHIPSTER_CACHE_EHCACHE_TIME_TO_LIVE_SECONDS=3600
JHIPSTER_CACHE_EHCACHE_MAX_ENTRIES=2000

# Real-time features cache settings
CACHE_TEMPLATES_TTL=3600
CACHE_SHOPPING_LISTS_TTL=900
CACHE_TASK_LISTS_TTL=300
CACHE_DASHBOARD_ANALYTICS_TTL=1800

# ==========================================
# WEBSOCKET CONFIGURATION
# ==========================================
# WebSocket endpoints for real-time features
WEBSOCKET_HEARTBEAT_INTERVAL=10000
WEBSOCKET_TASK_SCHEDULER_POOL_SIZE=10

# ==========================================
# WORKFLOW AUTOMATION
# ==========================================
# Workflow trigger settings
WORKFLOW_TASK_GENERATION_ENABLED=true
WORKFLOW_NOTIFICATION_ENABLED=true
WORKFLOW_ASYNC_PROCESSING=true

# Task scheduling rules (days before event)
TASK_SHOPPING_DAYS_BEFORE=2
TASK_PREPARATION_DAYS_BEFORE=1
TASK_DELIVERY_DAYS_BEFORE=0
TASK_COOKING_HOURS_BEFORE=4

